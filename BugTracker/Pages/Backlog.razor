@page "/backlog"
@inject IModalService modal

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

<!-- modal showing FetchBugs -->
<button @onclick="@(()=> modal.Show<CreateBugModal>("Add New Bug"))" class="btn btn-primary">Add New Bug</button>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{

    <table class="table">
        <!-- table headings -->
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <!-- table body -->
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}



